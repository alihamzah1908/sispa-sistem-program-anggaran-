<script>
    $(document).ready(function () {
        
        // get data users
        var url = '/data_users/'
        $.ajax({
            'url': url,
            'dataType': 'json',
            'method': 'get',
        }).done(function (data) {
            $.each(data, function (index, value) {
                var body = '<tr>';
                body += '<td><input class="form-check-input m-0 align-middle" type="checkbox" aria-label="Select invoice"></td>';
                body += '<td><span class="text-muted">001401</span></td>';
                body += '<td>' + value.name + '</td>';
                body += '<td>' + value.username + '</td>';
                body += '<td>' + value.role_user + '</td>';
                body += '<td>';
                body += '<span class="dropdown">';
                body += '<button class="btn dropdown-toggle btn-sm align-text-top" data-bs-boundary="viewport" data-bs-toggle="dropdown">Actions</button>';
                body += '<div class="dropdown-menu dropdown-menu-end">';
                body += '<a class="dropdown-item btn-sm edit" data-bind=' + value.id + ' href="javascript:void(0)">';
                body += 'Edit';
                body += '</a>';
                body += '<a class="dropdown-item btn-sm delete" data-bind=' + value.id + ' href="javascript:void(0)">';
                body += 'Hapus';
                body += '</a>';
                body += '</div>';
                body += '</span>';
                body += '</td>';
                body += '<tr>';
                $('#users > tbody').append(body)
            })
        })
        
        // edit data users
        $('body').on('click', '.edit', function () {
            var id = $(this).attr('data-bind')
            var url = '/data_users/'
            $.ajax({
                'url': url,
                'dataType': 'json',
                'method': 'get',
                'data': {
                    'id': id
                }
            }).done(function (data) {
                $.each(data, function (index, value) {
                    $("#fullname").val(value.name)
                    $("#username").val(value.username)
                    $("#role_user").val(value.role_user)
                    $("#id").val(value.id)
                })
            });
            $("#password").prop('disabled', true)
            $("#password_form").hide();
            $("#modal-report").modal('show')
        })

        // delete data users
        $('body').on('click', '.delete', function () {
            if (confirm('Apakah anda yakin akan menghapus data ini ?')){
                var id = $(this).attr('data-bind')
                var url = '/delete_users/'
                $.ajax({
                    'url': url,
                    'dataType': 'json',
                    'method': 'get',
                    'data': {
                        'id': id
                    }
                }).done(function (data) {
                    if(data.status == 200){
                        location.reload()
                    }else{
                        alert("Gagal hapus data")
                    }
                });
            }
        })
    })
</script>