  <script>
    $(document).ready(function () {
      var url = '/data_rekening/'
      $.ajax({
        'url': url,
        'dataType': 'json',
        'method': 'get',
      }).done(function (data) {
        var sum = 0;
        $.each(data, function (index, value) {
          sum += parseFloat(value.saldo)
        })
        $('.sisa_saldo').html('Rp. ' + sum.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1."))
      })
      // Get data user 
      var url = '/data_users/'
      $.ajax({
        'url': url,
        'dataType': 'json',
        'method': 'get',
        'data': {
          'username': $('#logusername').val()
        },
      }).done(function (data) {
        if (data[0].role_user == 'super admin') {
          $(".users").show()
          $("#tambah-cashflow").hide()
        } else {
          $(".users").hide()
        }
      })
    })
  </script>
